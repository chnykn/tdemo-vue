{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"lib": [
			"esnext",
			"dom"
		],
		"types": [
			"vite/client"
		],
		"noEmit": true,
		"baseUrl": "./",
		"paths": {
			"@/*": [
				"src/*"
			]
		}
	},
	"include": [
		"**/*.ts",
		"src/**/*.d.ts",
		"src/types/**/*.d.ts",
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"node_modules/tdesign-vue-next/global.d.ts" //不加入这一行，类型检查就减弱很多
	],
	"compileOnSave": false
}